<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnln"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/icon_marker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/ic_loc_orange"/>

    <LinearLayout
        android:id="@+id/places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/icon_marker"
        android:orientation = "vertical">

        <TextView
            android:id="@+id/place_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue1"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/icon"
            android:text="Place 1"/>

        <TextView
            android:id="@+id/place_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:textColor="@color/grey2"
            android:textSize="14dp"
            android:text=""/>

        <TextView
            android:id="@+id/place_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:textColor="@color/grey2"
            android:textSize="14dp"
            android:text=""/>

    </LinearLayout>

    <TextView
        android:id="@+id/place_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey3"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:text="x"/>



</RelativeLayout>