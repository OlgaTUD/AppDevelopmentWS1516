<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_content"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_action_m1"
        android:focusable="false"/>

    <LinearLayout
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/icon"
        android:orientation = "vertical"
        android:focusable="false">

        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue1"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/icon"
            android:text="Dresden"
            android:focusable="false"/>
        <TextView
            android:id="@+id/place_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon"
            android:textColor="@color/grey2"
            android:textSize="14dp"
            android:text="8 Places"
            android:focusable="false"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/place"
        android:gravity="right"
        android:orientation = "horizontal">

    <ImageButton
        android:id="@+id/icon_mapview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/ic_action_map"
        android:focusable="false"/>

    <ImageButton
        android:id="@+id/icon_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/icon_mapview"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/ic_action_list"
        android:focusable="false"/>

    </LinearLayout>

</RelativeLayout>