<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/marker</item>
        <item name="android:height">56dp</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/titleTextStyleAttributes</item>
    </style>

    <style name="titleTextStyleAttributes" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">21dp</item>
        <item name="android:textColor">@color/white</item>

    </style>


</resources>
